# GNU dircolors
# has to be done after PATH, in case, eg, it's in /sw/bin or something
if (-X dircolors) then
    test -r ~/.dir_colors && eval `dircolors -c ~/.dir_colors`
else if (-X gdircolors) then
    test -r ~/.dir_colors && eval `gdircolors -c ~/.dir_colors`
endif


