!xterm*faceName:          ProFontWindows:pixelsize=14
xterm*faceName:          Terminus:pixelsize=12
xterm*background:        Black
xterm*foreground:        White
xterm*saveLines:         100000

URxvt*font:              xft:Terminus:size=8
URxvt*background:        Black
URxvt*foreground:        White
URxvt*saveLines:         100000
URxvt.scrollBar:         true
URxvt.scrollBar_right:   true
!URxvt.scrollStyle_right: rxvt

URxvt.perl-ext-common:   default,matcher
URxvt.urlLauncher:       /usr/bin/conkeror
URxvt.underlineURLs:     true
URxvt.matcher.button:    1


! cause meta (alt) to send an escape key, but allow pasting of 8 bit characters (i.e. not just ascii)
xterm*metaSendsEscape:   true
xterm*eightBitInput:     false

!Emacs*faceName:          ProFontWindows
!Emacs*faceSize:          10
!emacs.font: ProFontWindows-10
