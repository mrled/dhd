// Place your settings in this file to overwrite the default settings
{
    "breadcrumbs.enabled": true,
    "cSpell.userWords": [
        "cred",
        "creds",
        "endhighlight",
        "lability",
        "prereq",
        "prereqs",
        "vhds",
        "vuln",
        "webserver",
    ],
    "go.lintOnSave": "off", // golint fucking sucks
	"editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.fontFamily": "Fira Code, Consolas, Inconsolata, monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "files.eol": "\n",
    "files.exclude": {
        "**/._*": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/*.js": { "when": "$(basename).ts"},
        "**/*.js.map": true,
        "**/*.pyc": true,
        "**/CVS": true,
        "**/env": true,
        "**/env.*": true,
        "**/venv": true,
        "**/venv.*": true,
    },
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/*.pyc": true,
        "**/env/**": true,
        "**/env.*/**": true,
        "**/venv/**": true,
        "**/venv.*/**": true
    },
    "markdownlint.config": {
        "MD004": false, // don't warn when a list starts with - instead of *
        "MD006": false,
        "MD007": false, // don't warn on 4 space bullet indent
        "MD013": false,
        "MD030": false, // don't warn on 3 spaces after bullet
        "MD033": false, // lol yeah absolutely, warn on inline html
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.pyc": true,
        "**/env": true,
        "**/env.*": true,
        "**/venv": true,
        "**/venv.*": true
    },
    "search.useIgnoreFiles": true,
    // "spellright.ignoreRegExps": [
    //     "[Cc]reds?",
    //     "endhighlight",
    //     "Lability",
    //     "prereq",
    //     "prereqs",
    //     "vhds",
    //     "vuln",
    //     "webserver",
    // ],
    "telemetry.enableTelemetry": false,
    "terminal.integrated.shell.windows": "C:\\Windows\\sysnative\\WindowsPowerShell\\v1.0\\powershell.exe",
    "window.restoreWindows": "all",
    "window.zoomLevel": -1,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tips.enabled": false,
}