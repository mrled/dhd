proto udp
port 1194
dev tun1194
iproute /usr/local/sbin/unpriv-ip
status openvpn-status.log
verb 3
keepalive 10 60
persist-key
persist-tun
duplicate-cn
# comp-lzo
ifconfig-pool-persist ipp.txt

key vpnserver.key
ca ca.crt
cert vpnserver.crt
dh dh.pem
tls-auth ta.key 0

server {{ openvpn_private_subnet }} 255.255.255.0

